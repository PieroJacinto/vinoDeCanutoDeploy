<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>   
</head>
<body>
    <header>
        <%- include('./partials/header') %>
    </header>
    
    <main class="main-pad ">                
        <section class="section-filter-prod home-pad">
            <!-- FILTROS -->
            <div class="filter-section">
                <div class="categ-left-section">  
                    <% if (locals.oldData) { %>
                        <%- include('./partials/filtros', {atributos, categoria, oldData }) %>                     
                    <% } else { %> 
                        <%- include('./partials/filtros', {atributos, categoria}) %>
                    <% } %>
                </div>
            </div>        

            <!-- SECTION DONDE SE MUESTRAN LAS CARDS DE LOS PRODUCTOS -->
            <div class="tarjetas">    
                <% productosFiltrados.forEach(producto => { %>                 
                    <div class="tarjeta">
                        <a href="/detalleProducto/<%= producto.id %>">
                            <img src="../images/vinos/<%= producto.imagen %>" alt="" srcset="" class="tarjeta-imagen">                            
                            <div class="contenido-tarjeta">
                                <p class="tarjeta-nombre"><%= producto.nombre %></p>
                                <% if (producto.descuento > 0) { %>
                                    <div class="d-flex justify-content-center align-items-center">
                                        <div class="descuento  mrg-rg-1"> %<%= producto.descuento %> Off</div>
                                        <p class="precio-oferta mrg-rg-1">$<%= producto.precio %></p>
                                        <p id="precio-con-descuento"> $<%= Math. round(producto.precio - ((producto.precio * producto.descuento) / 100)) %></p>
                                    </div>                                    
                                <% } else { %>
                                    <p>$<%= producto.precio %></p>
                                <% } %>
                            </div>
                            <div class="boton-tarjeta">Agregar</div>
                        </a>
                    </div>            
                <% }) %>                                         
            </div>             
        </section>
    </main> 
    <!-- FOOTER -->
    <footer class="footer-contenedor">
        <%- include('./partials/footer') %> 
    </footer>   
       
    <!-- BOOTSTRAP ENDING LINE -->
    <script src="../js/hamburguer.js"></script>

    <!-- FILTRO DE PRECIO JS -->
    <script src="../js/filtroPrecio.js"></script>
    
    <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" 
        crossorigin="anonymous">
    </script>
</body>
</html>
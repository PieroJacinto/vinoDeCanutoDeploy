<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
</head>
<body>
    <header>
        <%- include('./partials/header') %>
    </header>    
       
    <main class="main-pad">
        <section class="home-pad detalle-prod-grid">
            <div class="detalle-left">  
                <div>
                    <img src="../images/vinos/<%= producto.imagen %>" alt="">
                </div>
            </div>
            <div class="detalle-right">                
                <div class="detalle-titulo"> <%= producto.nombre  %></div>
                <% if (producto.descuento > 0) { %>
                    <div class="d-flex  align-items-center">
                        <div class="descuento detalle-precio mrg-rg-1"> %<%= producto.descuento %> Off</div>
                        <p class="precio-oferta detalle-precio mrg-rg-1">$<%= producto.precio %></p>
                        <p id="precio-con-descuento" class="detalle-precio"> $<%= Math. round(producto.precio - ((producto.precio * producto.descuento) / 100)) %></p>
                    </div>                                    
                <% } else { %>
                    <p class="detalle-precio">$<%= producto.precio %></p>
                <% } %>
                <% if (producto.bodega != null) { %>
                    <div class="detalle-varios"> Bodega: <%= producto.bodega %></div>                 
                <% } %>     
                <% if (producto.a침o != null) { %>
                    <div class="detalle-varios"> A침o: <%= producto.a침o %></div>                 
                <% } %>           
                <% if (producto.varietal != null) { %>
                    <div class="detalle-varios">Varietal: <%= producto.varietal %></div>                 
                <% } %>
                <% if (producto.region != null) { %>
                    <div class="detalle-varios">Regi칩n: <%= producto.region %></div>                 
                <% } %>
                <div class="descripcion-producto">
                    <%= producto.descripcion %>
                </div>
                <form class="" action="/carrito/agregar" method="POST" enctype="form-data" id="form-agregar-producto">
                    <div class="contenedor-sumar-producto">
                        <div class="sumar-restar-producto">
                            <input type="button" id="btn-restar" value="-">
                            <input type= "number" name="cantidad" class= "text-center"id="contador" value="1">
                            <input type="button" id="btn-sumar" value="+">                        
                        </div>
                        <div>
                            <input type="hidden" name="id" value="<%= producto.id %>" />                            
                            <button class="sumar-restar-boton" type="submit"> Agregar </button>
                        </div>
                    </div> 
                </form>           
            </div>
        </section>
       
    </main>
    <!-- FOOTER -->
    <footer class="footer-contenedor">
        <%- include('./partials/footer') %>
    </footer>
     <!-- HAMBURGUER JS SCRIPT  -->
     <script src="../public/js/hamburguer.js"></script>

     <!-- SUMAR Y RESTAR PRODUCTO SCRIPT -->
     <script src="../js/sumarRestarProducto.js"></script>

        <!-- BOOTSTRAP ENDING LINE -->
    <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" 
        crossorigin="anonymous">
    </script>
</body>
</html>